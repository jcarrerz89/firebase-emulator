rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Rules for secondary storage bucket (e.g., for backups or logs)
    match /logs/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    match /backups/{allPaths=**} {
      allow read, write: if request.auth != null && 
        request.auth.token.admin == true; // Only admins can access backups
    }
    match /{allPaths=**} {
      allow read, write: if false; // Default deny
    }
  }
}
