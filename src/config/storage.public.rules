rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Rules for public storage bucket (nogal-public)
    match /assets/{allPaths=**} {
      allow read: if true; // Public read access
      allow write: if request.auth != null && 
        request.auth.token.admin == true; // Only admins can write
    }
    match /uploads/{allPaths=**} {
      allow read: if true; // Public read access
      allow write: if request.auth != null; // Any authenticated user can upload
    }
    match /cache/{allPaths=**} {
      allow read: if true; // Public read access
      allow write: if false; // No direct writes to cache
    }
    match /{allPaths=**} {
      allow read: if true; // Default public read
      allow write: if false; // Default no write
    }
  }
}
